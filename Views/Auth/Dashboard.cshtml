@{
    ViewData["Title"] = "Dashboard";
}
@model LibraryManagementSystem.Models.Dashboard

 @if (TempData["error"] is not null)
        {
          <div class="alert alert-danger">@TempData["error"]</div>
        }
 @if (TempData["msg"] is not null)
        {
          <div class="alert alert-success">@TempData["msg"]</div>
        }


 <div  class="pp" style="margin-right:80px; margin-left:80px;>

   <div class="text-center">
   <b> <h2>  Library Membership Form</h2></b>
   
    <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Removemember"> <button type="submit" class="btn btn-primary" style="margin-left:1100px;">Remove member</button></a>
    
         
    <hr/><br />
   <form method="post" asp-controller="Auth"  asp-action="Addbook" >
    <div class="row g-3" >
        <div class="col-6">
     <label asp-for="Appid" class="form-label">Applicant Id *</label>
    <input type="text" class="form-control" aps-validation-for="Appid">
  </div>
    <div class="col-md-6">
        <label asp-for="Name" class="form-label">Name of applicant *</label>
    <input type="text" class="form-control" aps-validation-for="Name">
   
  </div> 
    <div class="col-md-6">
   <label asp-for="Email" class="form-label">Email *</label>
    <input type="email" class="form-control" aps-validation-for="Email">
  </div>

   <div class="col-md-6">
    <label asp-for="Number" class="form-label">Mobile Number *</label>
    <input type="number" class="form-control" aps-validation-for="Number">
  </div>

   <div class="col-md-6">
    <label asp-for="Birth" class="form-label">Birth Date</label>
    <input type="date" class="form-control" asp-validation-for="Birth">
  </div>
  <div class="col-6">
    <label asp-for="Address" class="form-label">Address *</label>
    <input type="text" class="form-control" aps-validation-for="Adress">
  </div>
  
  <div class="col-md-6">
   <label asp-for="City" class="form-label">City Name*</label>
    <input type="text" class="form-control" aps-validation-for="City">
  </div>

  <div class="col-md-4">
    <label asp-for="State" class="form-label">State *</label>
    <input type="text" class="form-control" aps-validation-for="State">
  
  </div>
  <div class="col-md-2">
    <label asp-for="Zip" class="form-label">Zip *</label>
    <input type="number" class="form-control" aps-validation-for="Zip">
  </div>

  <div class="col-md-6">
   <label asp-for="Course" class="form-label">Course *</label>
    <input type="text" class="form-control" aps-validation-for="Course">
  </div>
  <div class="col-md-6">
   <label asp-for="Gender" class="form-label">Gender*</label>
    <input type="text" class="form-control" aps-validation-for="Gender">
  </div>
  <div class="col-md-6">
               <label asp-for="Image" class="form-label">Image of applicant *</label>
    <input type="file" class="form-control" aps-validation-for="Image">
            </div>
            <div class="col-md-6">
                 <label asp-for="Signature" class="form-label">Id of applicant *</label>
    <input type="file" class="form-control" aps-validation-for="Signature">
            </div>
 <div class="col-md-6" >
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="gridCheck">
      <label class="form-check-label" for="gridCheck">
        I hereby declare that I will accept all terms and conditions of 
        library and hence will responsible for any issue related with me
        from this library. I will be dued if library found any wrong with me.
      </label>
    </div>
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Submit Application</button>
  </div>
</form>
</div>
</div>

